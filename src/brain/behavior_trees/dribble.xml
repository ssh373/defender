<root BTCPP_format="4" >
    <include path="./subtrees/cam_find_and_track_ball.xml" />

    <BehaviorTree ID="MainTree">
        <Sequence name="root">
            <RunOnce><Script code="control_state=1" /></RunOnce>
            <RunOnce><Script code="gc_game_state='PLAY'" /></RunOnce>

            <SubTree ID="CamFindAndTrackBall" _autoremap="true" /> <!-- autoremap 은 부모의 blackboard 변수들을 그대로 사용할 수 있게 해줌 -->
            <CalcKickDir />
            <ReactiveSequence>
                <Chase vx_limit="0.9" vy_limit="0.2" vtheta_limit="1.0" dist="0.1" safe_dist="0.5" />
                <Adjust turn_threshold="0.5" range="0.4" vx_limit="0.7" vy_limit="0.6" vtheta_limit="1.5" vtheta_factor="1.5" tangential_speed_far="0.7" tangential_speed_near="0.15" />
                <Kick speed_limit="0.8" min_msec_kick="1000" msecs_stablize="1000"/>
            </ReactiveSequence>
        </Sequence>
    </BehaviorTree>
</root>
